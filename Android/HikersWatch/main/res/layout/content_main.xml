<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/hiker"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiker&apos;s Watch"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#faf5f5"
        android:textSize="40sp"
        android:textIsSelectable="true"
        android:paddingTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude : 34.7"
        android:id="@+id/txtLatitude"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude : 34.7"
        android:id="@+id/txtLongitude"
        android:layout_below="@+id/txtLatitude"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude : 34.7"
        android:id="@+id/txtAltitude"
        android:layout_below="@+id/txtLongitude"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bearing : 34.7"
        android:id="@+id/txtBearing"
        android:layout_below="@+id/txtAltitude"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed : 34.7 m/s"
        android:id="@+id/txtSpeed"
        android:layout_below="@+id/txtBearing"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy : 34.7 m"
        android:id="@+id/txtAccuracy"
        android:layout_below="@+id/txtSpeed"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :\n 23 Fake Road"
        android:id="@+id/txtAddress"
        android:layout_below="@+id/txtAccuracy"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#faf5f5"
        android:paddingTop="20dp"
        android:gravity="center_horizontal" />
</RelativeLayout>
